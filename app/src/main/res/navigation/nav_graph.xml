<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.e_commerce.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/fragment_detail" />

    </fragment>

    <fragment
        android:id="@+id/fragment_basket"
        android:name="com.example.e_commerce.ui.basket.Basket"
        android:label="Basket"
        tools:layout="@layout/fragment_basket"/>

    <fragment
        android:id="@+id/fragment_star"
        android:name="com.example.e_commerce.ui.favorite.Favorite"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/fragment_profile"
        android:name="com.example.e_commerce.ui.profile.Profile"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.example.e_commerce.ui.detailpage.Detail"
        android:label="Detail"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="productModel"
            app:argType="com.example.e_commerce.components.ProductComponentUIModel"
            />
    </fragment>
</navigation>